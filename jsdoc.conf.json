{
    "tags": {
        "allowUnknownTags": false
    },
    "source": {
        "include": [
            "packages"
        ],
        "excludePattern": "(node_modules|dist)"
    },
    "templates": {
        "cleverLinks": false,
        "monospaceLinks": false,
        "default": {
            "outputSourceFiles": true
        },
        "applicationName": "Svizzle",
        "footer": "Nesta © 2019 (https://www.nesta.org.uk)",
        "copyright": "Nesta © 2019",
        "linenums": true
    },
    "opts": {
        "encoding": "utf8",
        "lenient": true,
        "private": false,
        "recurse": true,
        "template": "./node_modules/docdash"
    },
    "plugins": [
        "plugins/markdown"
    ],
    "docdash": {
        "search": true,
        "collapse": false,
        "menu":{
            "Github repo":{
                "href":"https://github.com/nestauk/svizzle",
                "target":"_blank",
                "class":"menu-item",
                "id":"repository"
            }
        },
        "meta": {
            "title": "Svizzle",
            "description": "Documentation for Svizzle",
            "keyword": "data visualisation, dataviz, svelte, components, utilities",
            "favicon": "./doc/cocktail_32.png"
        }
    }
}
